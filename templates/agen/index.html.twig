{% extends 'base.html.twig' %}

{% block title %}Agen index{% endblock %}

{% block body %}
<div class="card">
    <div class="card-header">
        <h3 class="card-title mb-0 text-center">List des Agent </h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="myTable" class="table nowrap align-middle table-datatable" style="width:100%">
                <thead class="table-primary">
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Telephone</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for agen in agens %}
                    <tr>
                        <td>{{ agen.id }}</td>
                        <td>{{ agen.email }}</td>
                        <td>{{ agen.nom }}</td>
                        <td>{{ agen.prenom }}</td>
                        <td>{{ agen.telephone }}</td>
                        <td>
                            <div class="d-flex">
                            <a href="{{ path('app_agen_show', {'id': agen.id}) }}" class="btn btn-primary btn-sm mx-2">list des demandes</a>
                            {{ include('agen/_delete_form.html.twig') }}
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    <div class="" style="bottom: 100px;position: fixed;right: 20px;z-index: 1000;">
        <a id="" href="{{ path('app_agen_new') }}"
           class="CustomerContracts-New btn btn-light bg-white waves-effect waves-light border-primary btn-rounded shadow-lg btn btn-icon btn-lg p-2">
            <i class="mdi mdi-spin  mdi-plus-circle text-primary fs-36"></i>
        </a>
    </div>
</div>
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('datatable') }}
    {% endblock %}